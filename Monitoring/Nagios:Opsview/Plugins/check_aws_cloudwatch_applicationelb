# Alert Functions
##############################################################################
def send_warning(message):
    print('WARNING - '+message)
    sys.exit(warn)


def send_critical(message):
    print('CRITICAL - '+message)
    sys.exit(crit)


def send_ok(message):
    print('OK - '+message)
    sys.exit(ok)


def send_unknown(message):
    print('UNKNOWN - '+message)
    sys.exit(unknown)


# Git-r-done!
##############################################################################
def main():
    args = get_args()
    if args.metric == 'ActiveConnectionCount':
        metric_activeconnectioncount(args)
    elif args.metric == 'RequestCount':
        metric_requestcount(args)
    elif args.metric == 'ConsumedLCUs':
        metric_consumedlcus(args)
    elif args.metric == 'ProcessedBytes':
        metric_processedbytes(args)
    elif args.metric == 'HealthyHostCount':
        metric_healthyhostcount(args)
    elif args.metric == 'UnHealthyHostCount':
        metric_unhealthyhostcount(args)
    elif args.metric == 'HTTPCode_Target_5XX_Count':
        metric_httpcode_target_5xx_count(args)
    elif args.metric == 'HTTPCode_Target_4XX_Count':
        metric_httpcode_target_4xx_count(args)
    elif args.metric == 'HTTPCode_Target_3XX_Count':
        metric_httpcode_target_3xx_count(args)
    elif args.metric == 'HTTPCode_Target_2XX_Count':
        metric_httpcode_target_2xx_count(args)
    elif args.metric == 'HTTPCode_ELB_504_Count':
        metric_httpcode_elb_504_count(args)
    elif args.metric == 'HTTPCode_ELB_503_Count':
        metric_httpcode_elb_503_count(args)
    elif args.metric == 'HTTPCode_ELB_502_Count':
        metric_httpcode_elb_502_count(args)
    elif args.metric == 'HTTPCode_ELB_500_Count':
        metric_httpcode_elb_500_count(args)
    elif args.metric == 'HTTPCode_ELB_5XX_Count':
        metric_httpcode_elb_5xx_count(args)
    elif args.metric == 'HTTPCode_ELB_4XX_Count':
        metric_httpcode_elb_4xx_count(args)
    elif args.metric == 'HTTPCode_ELB_3XX_Count':
        metric_httpcode_elb_3xx_count(args)
    else:
        send_unknown('unsupported metric')


if __name__ == "__main__":
    main()
